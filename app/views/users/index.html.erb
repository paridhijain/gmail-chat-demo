<%= link_to 'Logout', destroy_user_session_path, method: :delete %><br/>
<table class="table table-bordered table_size">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Send message</th>
    </tr>
  </thead>
  <tbody>
    <% if @users.present? %>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index +=1 %></td>
          <td><%= user.try(:name) %></td>
          <td>
            <%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation", "data-sid" => current_user.id, "data-rip" => user.id %>
          </td>
        </tr><br />
      <% end %>
    <% else %>
      <tr class='remove_text'><th>"No user present for chat."</th></tr>
    <% end %>
  </tbody>
</table>

