<h1>Chat</h1>

<ul id="chat">
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</ul>

<%= form_for :message, url: messages_path ,remote: true, :html => {:id => 'new_message'} do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to "/messages/new" %>
